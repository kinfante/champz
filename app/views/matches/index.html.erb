<h1>Listing matches</h1>

<table>
  <tr>
    <th>Round</th>
    <th>Team</th>
    <th></th>
    <th></th>
    <th>Team</th>
    <th>Status</th>
  </tr>

<% for match in @championship.matches %>
  <tr>
    <td><%=h match.round %></td>
    <td><%=h match.home_team.name %></td>
    <td><%=h match.home_score %> X </td>
    <td><%=h match.away_score %></td>
    <td><%=h match.away_team.name %></td>
    <td><%=h match.status %></td>
    <td><%= link_to 'Show', match %></td>
    <td><%= link_to 'Edit', edit_match_path(match) %></td>
    <td><%= link_to 'Destroy', match, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'Generate Matches', :controller => :matches, :action => :generate, :championship_id => @championship %>
