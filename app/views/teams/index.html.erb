<h1>Listing teams</h1>

<table>
  <tr>
    <th>Name</th>
    <th>Championship</th>
  </tr>

<% for team in @championship.teams %>
  <tr>
    <td><%=h team.name %></td>
    <td><%= link_to 'Show', team %></td>
    <td><%= link_to 'Edit', edit_team_path(team) %></td>
    <td><%= link_to 'Destroy', team, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

<br />

<% if @championship.teams.size > 0 %>
  <%= link_to 'View/Create matches', :controller => 'match' %>
<% else %>
  <%= link_to 'Create teams', :action => 'new_teams', :id => @championship %>
<% end %>