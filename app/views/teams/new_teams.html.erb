Championship's teams

<% form_tag(:action => 'create_teams', :method => "post") do %>
  <% @teams.each_with_index do |@team, index| %>
    <%= index+1 -%>:
    <%= text_field("team[]", 'name') %>
    <br/>
  <% end %>
  <%= hidden_field_tag "championship_id", @championship.id %>
  <%= submit_tag %>
<% end %>
